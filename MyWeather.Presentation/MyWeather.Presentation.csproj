      </MauiXaml>
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Material.Components.Maui">
        <HintPath>..\..\..\..\..\.nuget\packages\material.components.maui\0.2.2-preview\lib\net8.0-ios17.2\Material.Components.Maui.dll</HintPath>
