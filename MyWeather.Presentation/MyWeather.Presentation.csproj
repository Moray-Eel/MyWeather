      </MauiXaml>
      <MauiXaml Update="Controls\Frames\CustomSearchBar.xaml">
        <SubType>Designer</SubType>
      </MauiXaml>
      <MauiXaml Update="Controls\Popups\NoInternetPopup.xaml">
