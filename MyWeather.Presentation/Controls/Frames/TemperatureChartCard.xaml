<?xml version="1.0" encoding="utf-8" ?>
<sho:MaterialFrame
    CornerRadius="12.5"
    MaterialBlurStyle="Dark"
    MaterialTheme="AcrylicBlur"
    Padding="0"
    x:Class="MyWeather.Presentation.Controls.Frames.TemperatureChartCard"
    x:DataType="models:TemperatureChartCardViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    xmlns:models="clr-namespace:MyWeather.Presentation.ViewModels"
    xmlns:sho="http://sharpnado.com"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView
        HorizontalScrollBarVisibility="Never"
        Margin="0"
        Orientation="Horizontal"
        Padding="0">
        <VerticalStackLayout Padding="0,10,0,10">
            <lvc:CartesianChart
                HeightRequest="200"
                IsEnabled="False"
                Padding="0"
                Series="{Binding Series}"
                WidthRequest="1000"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                x:Name="Chart" />
        </VerticalStackLayout>
    </ScrollView>
</sho:MaterialFrame>