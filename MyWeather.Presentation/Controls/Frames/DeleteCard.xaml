    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout VerticalOptions="End">
        <VerticalStackLayout FlowDirection="RightToLeft">
            <Image
                HeightRequest="30"
                Margin="0,0,0,0"
