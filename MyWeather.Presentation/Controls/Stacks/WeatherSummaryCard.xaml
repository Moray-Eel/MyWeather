<?xml version="1.0" encoding="utf-8" ?>

<VerticalStackLayout
    HorizontalOptions="Center"
    x:Class="MyWeather.Presentation.Controls.Stacks.WeatherSummaryCard"
    x:DataType="viewmodel:WeatherSummaryCardViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:viewmodel="clr-namespace:MyWeather.Presentation.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Image
        HeightRequest="100"
        HorizontalOptions="Center"
        Source="{Binding IconSource}"
        WidthRequest="100" />
    <Label
        FontAttributes="Bold"
        FontSize="40"
        HorizontalTextAlignment="Center"
        Text="{Binding City}"
        TextColor="Azure" />
    <Label
        FontAttributes="Bold"
        FontSize="Medium"
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"
        Text="{Binding Temperature, StringFormat='{0}°C'}"
        TextColor="Azure"
        VerticalOptions="Center" />
    <Label
        FontAttributes="Bold"
        FontSize="Medium"
        HorizontalTextAlignment="Center"
        Text="{Binding Description}"
        TextColor="Azure" />
</VerticalStackLayout>